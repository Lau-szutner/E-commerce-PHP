{
    // Versi√≥n de PHP usada en el proyecto
    "intelephense.environment.phpVersion": "8.2",
    // Autocompletado y an√°lisis
    "intelephense.environment.includePaths": [
        "vendor" // solo si usan Composer, si no, pod√©s borrarlo
    ],
    // Habilitar formateo
    "intelephense.format.enable": true,
    // Reconocer archivos PHP
    "intelephense.files.associations": [
        "*.php"
    ],
    // Ignorar archivos innecesarios
    "intelephense.files.exclude": [
        "**/.git/**",
        "**/node_modules/**",
        "**/vendor/**/**.md",
        "**/vendor/**/**.dist"
    ],
    // Stubs b√°sicos para PHP vanilla
    "intelephense.stubs": [
        "Core",
        "date",
        "json",
        "mbstring",
        "pcre",
        "PDO",
        "Reflection",
        "session",
        "SPL",
        "standard",
        "superglobals"
    ],
    // üî• UNIFICAR TABS Y ESPACIOS (esto resuelve tu problema)
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    // Opcional: formatear autom√°ticamente al guardar
    //"editor.formatOnSave": true
}